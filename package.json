{
  "name": "vite-mui-react-express-template",
  "version": "0.0.0",
  "description": "Webアプリケーション開発のテンプレート",
  "author": "ym.u.ichiro@gmail.com",
  "license": "MIT",
  "engines": {
    "yarn": "Please use npm"
  },
  "keywords": [
    "template",
    "react",
    "mui-material",
    "express"
  ],
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.10.13",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^10.1.0",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "i18next": "^22.0.6",
    "i18next-browser-languagedetector": "^7.0.1",
    "jet-logger": "^1.2.6",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-i18next": "^12.0.0",
    "react-icons": "^4.6.0",
    "react-router-dom": "^6.4.3",
    "recoil": "^0.7.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-helmet": "^6.1.5",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-react": "^2.2.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    }
  },
  "scripts": {
    "clean": "rimraf dist && rimraf node_modules",
    "start": "run-p start:*",
    "start:client": "vite --host ",
    "start:server": "ts-node-dev -P tsconfig.server.json -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc -p tsconfig.server.json && vite build",
    "test": "jest && tsc --noEmit && eslint './src/**/*.{ts, tsx, js, jsx, json}' && prettier --write src",
    "serve": "node ./dist/index.js"
  }
}
